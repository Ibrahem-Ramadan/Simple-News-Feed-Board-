@model User
@{
    ViewBag.Title = "Profile";
}

<div class="container">

    <hr />
    <br />
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 ">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (Model.Photo == null)
                            {
                                <img src="https://www.pngall.com/wp-content/uploads/5/Profile-PNG-Clipart.png" alt="Photo" class="rounded-circle" width="150">
                            }
                            else
                            { 
                                <img src="~/Attachments/@Model.Photo" alt="Photo" class="rounded-circle" width="150">
                            }

                            <div class="mt-3">
                                <h4>@Model.Username</h4>
                                @if(Model.CV != null)
                                { 
                                   <a href="~/Attachments/@Model.CV">Download CV</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-md-8">
                <div class=" ">
                    <div class="">
                        <div class="row">

                            <div class="col-sm-3">
                                <h4 class="">Username:</h4>
                            </div>
                            <div class="col-sm-9 text-secondary">

                                <h4 class="">@Model.Username</h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h4 class="mb-0">Email:</h4>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <h4 class="mb-0">@Model.Email</h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h4 class="mb-0">Age:</h4>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @if (Model.Age != null)
                                {
                                    <h4 class="mb-0">@Model.Age</h4>
                                }
                                else
                                {
                                    <h4 class="mb-0">Not Specified</h4>
                                }
                            </div>
                        </div>
                        <hr>
                        <div class="row gutters-sm">
                            <div class="col-sm-12">
                                <h4 class="mb-0">Skills</h4>
                                <hr>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <ul>
                                            @foreach (var skill in Model.Skills)
                                            {
                                                <li>
                                                    <h5>@skill.SkillName</h5>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row col-lg-12 form-group">

                            @Html.ActionLink("Edit Profile", "Edit", new { id = Model.UserId }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Change Password", "ChangePassword",null, new { @class = "btn btn-info" })

                        </div>

                    </div>
                </div>

               
            </div>
        </div>
    </div>
</div>


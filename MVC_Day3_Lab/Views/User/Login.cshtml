
@model User
@{
    ViewBag.Title = "Login";
}



<form method="post" enctype="multipart/form-data" class="p-3">
    <fieldset>

        <br />
        <br />

        <div class="row">

            <!--Email-->
            <div class="form-group  col-lg-6 mt-4">
                @Html.LabelFor(u => u.Email, new { @class = "form-label mt-4" })
                @Html.TextBoxFor(u => u.Email, new { type = "email", @class = "form-control", placeholder = "Enter Email" })
                @Html.ValidationMessageFor(u => u.Email)
            </div>
        </div>

        <div class="row">
            <!--Password-->
            <div class="form-group  col-lg-6 mt-4">
                @Html.LabelFor(u => u.Password, new { @class = "form-label mt-4" })
                @Html.PasswordFor(u => u.Password, new { type = "password", @class = "form-control", placeholder = "Enter Password" })
                @Html.ValidationMessageFor(u => u.Password)

            </div>
            <div class="form-group  col-lg-12 mt-4">
                 @Html.CheckBox("remember") Remember me
            </div>
        </div>
        <div class="row">
            <!--Password-->
            <div class="form-group  col-lg-6 mt-4">
                <p class="text-danger"> @ViewBag.error</p>
            </div>
        </div>


        <div class="row col-lg-12 form-group">
            <button type="submit" class="btn btn-primary">Login</button>

        </div>
    </fieldset>
</form>


@section scripts{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}
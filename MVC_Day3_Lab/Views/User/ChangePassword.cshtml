@model User
@{
    ViewBag.Title = "ChangePassword";
}


<form method="post" enctype="multipart/form-data" class="p-3">
    <fieldset>
        @Html.HiddenFor(u => u.UserId)
        <br />
        <div class="row">
            <!--Password-->
            <div class="form-group  col mt-4">
                @Html.Label("pass", "Old Password", new { @class = "form-label mt-4" })
                @Html.Password("oldPass", null, new { type = "password", @class = "form-control", placeholder = "Enter Password" })
            </div>
            <br />
            <p class="text-danger">@ViewBag.error</p>
            <div class="form-group  col mt-4">
                @Html.LabelFor(u => u.Password, new { @class = "form-label mt-4" })
                @Html.PasswordFor(u => u.Password, new { type = "password", @class = "form-control", placeholder = "Enter Password" })
                @Html.ValidationMessageFor(u => u.Password)

            </div>
            <br />

            <div class="form-group  col mt-4 ">
                @Html.LabelFor(u => u.ConfPassword, new { @class = "form-label mt-4" })
                @Html.PasswordFor(u => u.ConfPassword, new { type = "password", @class = "form-control", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(u => u.ConfPassword)

            </div>

        </div>

        <div class="row col-lg-12 form-group">
            <button type="submit" class="btn btn-primary ">Submit</button>

        </div>
    </fieldset>
</form>

@section scripts{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}